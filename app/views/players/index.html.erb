<h1>Listing players</h1>

<table>
  <tr>
    <th><%= order(@search, :by => :name) %></th>
    <th><%= order(@search, :by => :wins) %></th>
    <th><%= order(@search, :by => :losses) %></th>
    <th><%= order(@search, :by => :win_percent, :as => "Win %") %></th>
    <th><%= order(@search, :by => :notes) %></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%=h player.name %></td>
    <td><%=h player.wins %></td>
    <td><%=h player.losses %></td>
    <td><%=h player.human_win_percent %></td>
    <td><%=h player.notes %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
  </tr>
<% end %>
</table>

